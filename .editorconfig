# https://editorconfig.org
#
# Written by Lucas Choi
# Date : 2020-11-01
#
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.go]
indent_size = 4
indent_style = tab
tab_width = 4

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
